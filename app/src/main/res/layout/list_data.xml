<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="140dp"
                        android:layout_height="160dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/shape_react"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/maps">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_lat"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="latitude"
                            android:textAllCaps="false"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txt_ldr"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="longitude"
                            android:textAllCaps="false"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txt_acc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="acc"
                            android:textAllCaps="false"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/secondaryText"
                            android:textSize="13.5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="date"
                            android:textAllCaps="false"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/secondaryText"
                            android:textSize="13.5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="time"
                            android:textAllCaps="false"
                            android:textColor="@color/secondaryText"
                            android:textSize="13.5sp">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_retrievemaps"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:padding="4dp"
                                android:gravity="left"
                                android:textAllCaps="false"
                                android:text="Cek"
                                android:textStyle="bold"
                                android:textColor="@color/primaryText"
                                android:layout_gravity="right"
                                app:backgroundTint="#fc0"
                                app:icon="@drawable/ic_baseline_edit_location_24"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconTint="#1e90ff"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                >
                            </com.google.android.material.button.MaterialButton>


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_iduser"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:padding="4dp"
                                android:gravity="left"
                                android:textAllCaps="false"
                                android:text=" ID"
                                android:textColor="@color/white"
                                android:layout_gravity="right"
                                app:backgroundTint="#363636"
                                app:icon="@drawable/ic_baseline_person_24"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconTint="#fff"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                >
                            </com.google.android.material.button.MaterialButton>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtid_user2"
                            android:layout_centerInParent="true"
                            android:textAllCaps="false"
                            android:text="ID User : ******"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:paddingEnd="5dp"
                            android:textSize="10dp"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>